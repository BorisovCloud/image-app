# Authentication Method
USE_MANAGED_IDENTITY=true

# Managed Identity Configuration (for Azure deployment)
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_ACCOUNT_URL=https://your_storage_account_name.blob.core.windows.net
AZURE_CLIENT_ID=your-user-assigned-managed-identity-client-id  # Optional: for user-assigned MI

# Fallback Configuration (for local development)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account_name;AccountKey=your_account_key;EndpointSuffix=core.windows.net
AZURE_STORAGE_KEY=your_storage_account_key

# Container configuration
AZURE_BLOB_CONTAINER=uploads
AZURE_PUBLIC_CONTAINER=false

# Flask configuration
FLASK_SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_DEBUG=true
